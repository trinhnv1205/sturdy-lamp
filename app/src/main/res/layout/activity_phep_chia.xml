<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:src="@drawable/dichoi"
            android:contentDescription="@string/app_name"
            android:scaleType="centerCrop"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="16dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:id="@+id/bangchia_button"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:layout_margin="8dp"
                android:background="@drawable/item_background_square"
                android:backgroundTint="@color/red_200"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="8dp"
                android:elevation="4dp">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_division"
                    android:contentDescription="@string/bang_chia" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/bang_chia"
                    android:textColor="@color/text_color"
                    android:textSize="18sp"
                    android:fontFamily="sans-serif-medium" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/chia1chuso_button"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:layout_margin="8dp"
                android:background="@drawable/item_background_square"
                android:backgroundTint="@color/blue_200"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="8dp"
                android:elevation="4dp">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_traitim"
                    android:contentDescription="@string/chia_mot_chu_so" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/chia_mot_chu_so"
                    android:textColor="@color/text_color"
                    android:textSize="18sp"
                    android:fontFamily="sans-serif-medium" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:id="@+id/chia2chuso_button"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:layout_margin="8dp"
                android:background="@drawable/item_background_square"
                android:backgroundTint="@color/green_200"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="8dp"
                android:elevation="4dp">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_ngoisao"
                    android:contentDescription="@string/chia_hai_chu_so" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/chia_hai_chu_so"
                    android:textColor="@color/text_color"
                    android:textSize="18sp"
                    android:fontFamily="sans-serif-medium" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/chiasohaidonvi_button"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:layout_margin="8dp"
                android:background="@drawable/item_background_square"
                android:backgroundTint="@color/yellow_200"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="8dp"
                android:elevation="4dp">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_chill"
                    android:contentDescription="@string/chia_so_hai_don_vi" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/chia_so_hai_don_vi"
                    android:textColor="@color/text_color"
                    android:textSize="18sp"
                    android:fontFamily="sans-serif-medium" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <LinearLayout
                android:id="@+id/chiabachuso_button"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:layout_margin="8dp"
                android:background="@drawable/item_background_square"
                android:backgroundTint="@color/purple_200"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="8dp"
                android:elevation="4dp">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_bling"
                    android:contentDescription="@string/chia_ba_chu_so" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/chia_ba_chu_so"
                    android:textColor="@color/text_color"
                    android:textSize="18sp"
                    android:fontFamily="sans-serif-medium" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/phepchiadongian_button"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:layout_margin="8dp"
                android:background="@drawable/item_background_square"
                android:backgroundTint="@color/grey_200"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="8dp"
                android:elevation="4dp">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_hoaxau"
                    android:contentDescription="@string/phep_chia_don_gian" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/phep_chia_don_gian"
                    android:textColor="@color/text_color"
                    android:textSize="18sp"
                    android:fontFamily="sans-serif-medium" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</ScrollView>