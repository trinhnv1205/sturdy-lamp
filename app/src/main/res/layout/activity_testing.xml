<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Nội dung danh sách -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cùng DLOG thành thạo các dấu trong phép toán nhé!"
            android:background="@drawable/bg_border"
            android:textStyle="bold"
            android:textSize="30dp"
            android:padding="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" > (dấu lớn hơn), < (dấu nhỏ hơn), = (dấu bằng)"
            android:background="@drawable/bg_border"
            android:textAlignment="center"
            android:padding="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bài 1: Điền dấu >,<,= vào chỗ trống"
            android:padding="8dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="88dp"
            android:src="@drawable/dau_hinhcot" />

        <LinearLayout
            android:layout_width="377dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/soba"
                android:layout_width="35dp"
                android:layout_height="38dp"
                android:text="3"
                android:textAlignment="center"
                android:textSize="25dp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/chondau"
                android:layout_width="34dp"
                android:layout_height="38dp"
                android:background="@drawable/bg_border" />

            <TextView
                android:id="@+id/somot"
                android:layout_width="35dp"
                android:layout_height="38dp"
                android:text="3"
                android:textAlignment="center"
                android:textSize="25dp"
                android:textStyle="bold" />

        </LinearLayout>

        <!-- Thêm các phần tử khác -->

    </LinearLayout>
</ScrollView>