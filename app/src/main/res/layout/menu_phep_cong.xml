<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center">

        <View
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@drawable/anh3"
            android:layout_marginBottom="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:id="@+id/continuous_addition_button"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:layout_margin="8dp"
                android:background="@drawable/item_background_square"
                android:backgroundTint="@color/red_200"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="8dp"
                android:elevation="4dp">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_addition"
                    android:contentDescription="@string/cong_lien_tiep" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/cong_lien_tiep"
                    android:textColor="@color/text_color"
                    android:textSize="18sp"
                    android:fontFamily="sans-serif-medium" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/cong1chuso_button"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:layout_margin="8dp"
                android:background="@drawable/item_background_square"
                android:backgroundTint="@color/blue_200"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="8dp"
                android:elevation="4dp">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_contho"
                    android:contentDescription="@string/cong_mot_chu_so" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/cong_mot_chu_so"
                    android:textColor="@color/text_color"
                    android:textSize="18sp"
                    android:fontFamily="sans-serif-medium" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:id="@+id/cong2chuso_button"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:layout_margin="8dp"
                android:background="@drawable/item_background_square"
                android:backgroundTint="@color/green_200"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="8dp"
                android:elevation="4dp">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_tuyet"
                    android:contentDescription="@string/cong_hai_chu_so" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/cong_hai_chu_so"
                    android:textColor="@color/text_color"
                    android:textSize="18sp"
                    android:fontFamily="sans-serif-medium" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/cong3chuso_button"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:layout_margin="8dp"
                android:background="@drawable/item_background_square"
                android:backgroundTint="@color/yellow_200"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="8dp"
                android:elevation="4dp">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_bling"
                    android:contentDescription="@string/cong_ba_chu_so" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/cong_ba_chu_so"
                    android:textColor="@color/text_color"
                    android:textSize="18sp"
                    android:fontFamily="sans-serif-medium" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <LinearLayout
                android:id="@+id/cong3so_button"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:layout_margin="8dp"
                android:background="@drawable/item_background_square"
                android:backgroundTint="@color/purple_200"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="8dp"
                android:elevation="4dp">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_tym"
                    android:contentDescription="@string/cong_ba_so" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/cong_ba_so"
                    android:textColor="@color/text_color"
                    android:textSize="18sp"
                    android:fontFamily="sans-serif-medium" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/congdongian"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:layout_margin="8dp"
                android:background="@drawable/item_background_square"
                android:backgroundTint="@color/grey_200"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="8dp"
                android:elevation="4dp">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_caio"
                    android:contentDescription="@string/phep_cong_don_gian" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/phep_cong_don_gian"
                    android:textColor="@color/text_color"
                    android:textSize="18sp"
                    android:fontFamily="sans-serif-medium" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</ScrollView>