<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/accent_color</item>
    </style>

    <!-- Define a style for the name TextView -->
    <style name="NameTextViewStyle">
        <item name="android:textColor">@color/answer_button</item>
        <item name="android:textSize">18sp</item>
        <item name="android:padding">8dp</item>
    </style>

    <!-- Define a style for the score TextView -->
    <style name="ScoreTextViewStyle">
        <item name="android:textColor">@android:color/holo_green_dark</item>
        <item name="android:textSize">18sp</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="TimeTextViewStyle">
        <item name="android:textColor">@android:color/holo_green_dark</item>
        <item name="android:textSize">18sp</item>
        <item name="android:padding">8dp</item>
    </style>
</resources>