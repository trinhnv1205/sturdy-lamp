        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- Base application theme. -->
    <style name="Base.Theme.LearnFragment" parent="Theme.Material3.Light">
